<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/hw5"

    >

    <EditText
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#9AF6FBFB"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="@android:color/primary_text_light"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="#9AF6FBFB"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="Age"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="@android:color/primary_text_light"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="#9AF6FBFB"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="your job"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="@android:color/primary_text_light" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="#9AF6FBFB"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="Phone number"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="@android:color/primary_text_light" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/editText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="#9AF6FBFB"
        android:bufferType="normal"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#F50E0E0E"
        android:textColorHint="@android:color/primary_text_light" />

    <Button
        android:id="@+id/button"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/editText5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:backgroundTint="#68BFB3B3"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Next"
        android:textSize="24sp" />

</RelativeLayout>